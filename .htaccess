RewriteEngine On

# Skip portal directory entirely
RewriteRule ^portal/ - [L]

# Skip includes directory
RewriteRule ^includes/ - [L]

# Skip static files
RewriteRule \.(js|css|png|jpg|jpeg|gif|ico|svg)$ - [L]

# Main app routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ app.php [QSA,L]